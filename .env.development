# Local Development Environment Variables
# Copy to .env and customize for your setup

# Application
ASPNETCORE_ENVIRONMENT=Development

# PostgreSQL
POSTGRES_DB=crmdb
POSTGRES_USER=crmuser
POSTGRES_PASSWORD=CrmDb@2024!Secure
POSTGRES_CONNECTION=Host=database;Port=5432;Database=crmdb;Username=crmuser;Password=CrmDb@2024!Secure

# Redis
REDIS_PASSWORD=Redis@2024!Pass
REDIS_CONNECTION=redis:6379,password=Redis@2024!Pass

# Elasticsearch
ELASTIC_PASSWORD=Elastic@2024!Pass
ELASTICSEARCH_URL=http://elasticsearch:9200

# JWT
JWT_SECRET=SuperSecretJwtKeyForCrmApp2024MustBe32CharsLong!
JWT_ISSUER=CrmApp
JWT_AUDIENCE=CrmAppUsers
JWT_EXPIRY_MINUTES=60

# Kibana
KIBANA_SYSTEM_PASSWORD=Elastic@2024!Pass
