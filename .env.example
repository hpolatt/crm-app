# Database Configuration
POSTGRES_USER=crmuser
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=crmdb
DB_CONNECTION_STRING=Host=database;Port=5432;Database=crmdb;Username=crmuser;Password=your-secure-password-here

# Redis Configuration
REDIS_PASSWORD=your-redis-password-here
REDIS_CONNECTION=redis:6379,password=your-redis-password-here

# Elasticsearch Configuration
ELASTIC_PASSWORD=your-elastic-password-here
ELASTICSEARCH_URL=http://elasticsearch:9200

# JWT Configuration
